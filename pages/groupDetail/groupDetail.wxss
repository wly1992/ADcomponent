/* pages/groupDatail/groupDatail.wxss */
page{
  background-color: #f2f2f2;
}
.letter{
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 40rpx;
  font-weight: bold;
  font-size: 34rpx;
}
.name{
  height: 90rpx;
  background-color: #fff;
  line-height: 90rpx;
  padding-left: 40rpx;
  padding-right: 20rpx;
  font-size: 30rpx;
  position: relative;
  box-sizing: border-box;
  border-bottom: 2rpx #d9d9d9 solid;
}
.name.last{
  border-bottom:none;
}
.phone{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 70rpx;
  top: 0;
}

.right_bar{
  width: 40rpx;
  position: fixed;
  right: 0;
  top: 80rpx;
  opacity: 0.7
}
.right_letter{
  height: 34rpx;
  width: 40rpx;
  text-align: center;
  line-height: 34rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #2874eb;
}