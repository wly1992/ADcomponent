/**index.wxss**/
page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.header {
  display: flex;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  border-bottom: 2rpx #d9d9d9 solid;
}
.main{
  flex: 1;
  position: relative;
}
.mark{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(200,200,200,0.5);
}
.header_group{
  width: 90rpx;
  color: #2a77d1;
  font-weight: bold;
}
.header_search{
  flex: 1;
  position: relative;
}
.search_input{
  background-color: #e8e8ea;
  border-radius: 16rpx;
  height: 60rpx;
  margin-top: 10rpx;
  padding-left: 60rpx;
  box-sizing: border-box;
  font-size:30rpx;
}
.search_icon{
  position: absolute;
  left: 20rpx;
  top: 18rpx; 
  z-index: 10;
}
.header_plus{
  width: 70rpx;
  text-align: right;
}
.header_plus_icon{
  width: 50rpx;
  height: 50rpx;
  margin-top: 15rpx;
}

.my_card{
  height: 160rpx;
  position: relative;
}
.card_pic{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: absolute;
  left: 40rpx;
  top: 20rpx;
}
.card_mes{
  position: absolute;
  left: 200rpx;
  height: 100rpx;
  top: 30rpx;
}
.card_name{
  height: 100rpx;
  line-height: 100rpx;
  font-weight: bold;
}


.letter{
  background-color: #f2f2f2;
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 40rpx;
  font-weight: bold;
  font-size: 34rpx;
}
.name{
  height: 90rpx;
  line-height: 90rpx;
  margin-left: 40rpx;
  margin-right: 20rpx;
  border-bottom: 2rpx #d9d9d9 solid;
  font-size: 30rpx;
  position: relative;
  box-sizing: border-box;
}
.name.last{
  border-bottom:none;
}
.phone{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 50rpx;
  top: 0;
}
.right_bar{
  width: 40rpx;
  height: 80%;
  position: fixed;
  right: 0;
  top: 10%;
  opacity: 0.7;
  display: flex;
  flex-direction: column;
}
.right_letter{
  flex: 1;
  display: flex;
  width: 40rpx;
  align-items: center;
  font-size: 24rpx;
  font-weight: bold;
  color: #2874eb;
}
.right_letter text{
  width: 100%;
  display: block;
  text-align: center;
}

.big_letter{
  width: 200rpx;
  height: 220rpx;
  text-align: center;
  line-height: 220rpx;
  background-color: grey;
  position: fixed;
  left: 50%;
  margin-left: -100rpx;
  top: 36%;
  border-radius: 20rpx;
  font-size: 100rpx;
  color: #fff;
}
